<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>CpuDataSource</AssemblyName>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\abstractions\OpenSimGaugeAbstractions.csproj" />
    </ItemGroup>
    <Target Name="CopyPluginToServer" AfterTargets="Build">
        <Copy 
            SourceFiles="$(TargetDir)$(AssemblyName).dll" 
            DestinationFolder="../../server/data-sources" 
            OverwriteReadOnlyFiles="true" />
    </Target>
</Project>