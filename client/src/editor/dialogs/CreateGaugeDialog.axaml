<Window
    x:Class="OpenGaugeClient.Editor.CreateGaugeDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:OpenGaugeClient.Editor.Components"
    Title="Create Gauge"
    Width="350"
    Height="350"
    CanResize="False"
    WindowStartupLocation="CenterOwner">
    <Border Margin="10">
        <StackPanel>
            <TextBlock FontSize="24" Text="Create Gauge" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="16"
                Text="Save To Client Config" />
            <TextBlock
                Margin="0,5"
                FontSize="12"
                Text="Enter the name of the gauge and it will be added to your client.config file."
                TextWrapping="Wrap" />
            <TextBox Text="{Binding Name}" />
            <TextBlock
                Margin="0,5"
                FontSize="16"
                Text="Save as JSON File" />
            <TextBlock
                Margin="0,5"
                FontSize="12"
                Text="Select a directory and the gauge will be saved into it."
                TextWrapping="Wrap" />
            <components:SelectFileField DirectoryOnly="True" Path="{Binding DirPath, Mode=TwoWay}" />
            <TextBlock
                Margin="0,5"
                FontSize="12"
                IsVisible="{Binding HasDirPath}"
                Text="Creating:" />
            <TextBlock
                Margin="0,5"
                FontSize="12"
                IsVisible="{Binding HasDirPath}"
                Text="{Binding JsonPath}"
                TextWrapping="Wrap"
                ToolTip.Tip="{Binding JsonPath}" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Width="80"
                    HorizontalContentAlignment="Center"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" />
                <Button
                    Width="80"
                    HorizontalContentAlignment="Center"
                    Command="{Binding OkCommand}"
                    Content="OK" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
