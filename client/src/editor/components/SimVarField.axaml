<UserControl
    x:Class="OpenGaugeClient.Editor.Components.SimVarField"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:OpenGaugeClient.Editor.Components"
    xmlns:local="using:OpenGaugeClient.Editor">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="Preview" Text="" />
        <components:PrimaryButton
            x:Name="PickButton"
            Command="{Binding PickCommand, RelativeSource={RelativeSource AncestorType={x:Type components:SimVarField}}}"
            Label="SimVar..."
            Size="Small" />
    </StackPanel>
</UserControl>
